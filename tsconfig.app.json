/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",  // Define root folder for resolving modules
    "paths": {
      "@app/*": ["app/*"],  // Define custom path alias
      "@pages/*": ["app/pages/*"],  // Define path for pages
      "@components/*": ["app/components/*"],  // Define path for components
    },
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
